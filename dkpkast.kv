

<dkpkast@Screen>:
    rows: 2
    name: 'dkpkast'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            rows: 2
            cols: 1
            minimum_height: self.height

            Image:
                id: cuprum
                source: 'dkpkast.png'
                size_hint: 1, 0.6
                allow_stretch: True

            RelativeLayout:
                pos_hint: {'x': 1, 'y': 1}
                Label:
                    markup: True
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    padding: 10, 10
                    text: 'Подкаст "Поляринов говорит"\n «Дон Кихот», идеальный метароман\n\n[ref=some]КЛИКНИ СЮДА[/ref]'
                    color: 0, 0, 0, 1
                    on_ref_press:
                        import webbrowser
                        webbrowser.open('https://soundcloud.com/polyarinov/6-don-kikhot-idealnyy-metaroman')
    Menu: