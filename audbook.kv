

<audbook@Screen>:
    rows: 2
    name: 'audbook'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 2
        cols: 1
        minimum_height: self.height

        Image:
            id: cuprum
            source: 'aud.png'
            size_hint: 1, 0.6
            allow_stretch: True

        RelativeLayout:
            pos_hint: {'x': 1, 'y': 1}
            Label:
                markup: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                padding: 10, 10
                text: 'А.С.Пушкин. "Медный всадник". Читает Сергей Герасимов (1982)\n\n[ref=some]КЛИКНИ СЮДА[/ref]'
                color: 0, 0, 0, 1
                on_ref_press:
                    import webbrowser
                    webbrowser.open('https://www.youtube.com/watch?v=8stiZXNoC9g')
    Menu: