

<sign@Screen>:
    name: 'sign'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                size_hint_y: None
                cols: 1
                row_default_height: '400dp'
                spacing: 20, 20
                padding: 10, 10
                height: self.minimum_height


                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10

                    Image:
                        id: sign
                        source: 'sign.png'
                        size_hint_y: None
                        allow_stretch: True
                        height: 300

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            text_size: self.size
                            halign: 'center'
                            valign: 'top'
                            padding: 10, 10
                            text: "РСФСР - Российская Советская Федеративная Социалистическая Республика.\nСоюзная республика в составе СССР (1922—1991)."
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 1
                    cols: 1
                    spacing: 10


                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            text_size: self.size
                            halign: 'center'
                            valign: 'top'
                            padding: 10, 10
                            text: "Надпись на печати\nСРЕДНЯЯ ОБЩЕОБРАЗОВАТЕЛЬНОЙ ТРУДОВАЯ ПОЛИТЕХНИЧЕСКАЯ ШКОЛА С ПРОИЗВОДСТВЕННЫМ ОБУЧЕНИЕМ.\n\nИз ПОЛОЖЕНИЯ О СРЕДНЕЙ ОБЩЕОБРАЗОВАТЕЛЬНОЙ ТРУДОВОЙ ПОЛИТЕХНИЧЕСКОЙ ШКОЛЕ С ПРОИЗВОДСТВЕННЫМ ОБУЧЕНИЕМ. Утверждено Постановлением Совета Министров РСФСР от 29 декабря 1959 г. N 2027\n\nЦели и задачи школы\nСредняя общеобразовательная трудовая политехническая школа с производственным обучением имеет своей целью подготовить воспитанных в духе идей коммунизма, всесторонне развитых людей, хорошо знающих основы наук и, вместе с тем, способных к систематическому физическому труду.\nСредняя общеобразовательная трудовая политехническая школа с производственным обучением дает полное среднее общее и политехническое образование и профессиональную подготовку для работы в одной из отраслей народного хозяйства или культуры на основе соединения обучения с общественно полезным производительным трудом учащихся.\nОкончание средней общеобразовательной трудовой политехнической школы с производственным обучением дает возможность юношам и девушкам работать по избранной профессии и право на поступление в высшие учебные заведения."
                            color: 0, 0, 0, 1

        GridLayout:
            cols: 4
            size_hint: 1, 0.15


            BoxLayout:
                orientation: 'horizontal'
                Button:
                    background_color: 255, 255, 255, 1
                    on_release: app.root.current = 'main'
                    Image:
                        source: 'main.png'
                        pos: self.parent.center_x*0.35, self.parent.center_y
                        center_y: self.parent.center_y
                        size: self.parent.width * 0.7, self.parent.width * 0.7



            BoxLayout:
                orientation: 'horizontal'
                Button:
                    background_color: 255, 255, 255, 1
                    on_release: app.root.current = 'library'
                    Image:
                        source: 'library.png'
                        pos: self.parent.center_x*0.75, self.parent.center_y
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        size: self.parent.width * 0.7, self.parent.width * 0.7


            BoxLayout:
                orientation: 'horizontal'
                Button:
                    background_color: 255, 255, 255, 1
                    on_release: app.root.current = 'qrcamera'
                    Image:
                        source: 'skan.png'
                        pos: self.parent.center_x*0.85, self.parent.center_y
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        size: self.parent.width * 0.7, self.parent.width * 0.7


            BoxLayout:
                orientation: 'horizontal'
                Button:
                    background_color: 255, 255, 255, 1
                    on_release: app.root.current = 'abapp'
                    Image:
                        source: 'abapp.png'
                        pos: self.parent.center_x*0.90, self.parent.center_y
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        size: self.parent.width * 0.7, self.parent.width * 0.7

