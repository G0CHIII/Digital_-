#:include library.kv
#:include abapp.kv
#:include abbook.kv
#:include vidbook.kv
#:include audbook.kv
#:include illust.kv
#:include mycamera.kv
#:include voda.kv
#:include sign.kv

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import hex kivy.utils.get_color_from_hex

<MainScreenManager>:
    transition: NoTransition()

    Screen:
        name: 'main'

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            cols: 1

            BoxLayout:
                size_hint: 1, 0.30
                canvas.before:
                    Color:
                        rgba: hex('E4D9FF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Image:
                    source: 'logo.png'
                    size_hint_y: None
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    height: self.parent.height * 0.85

            BoxLayout:
                size_hint: 1, 0.25
                Button:
                    size: [370, 170]
                    text: 'QR                            AR'
                    color: 0,0,0,1
                    font_size: 30
                    background_normal:'stripes_fit.png'
                    background_down: 'stripes_fit.png'
                    on_release: app.root.current = 'thecamera'
                    Image:
                        source: 'qrar.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
            Label:
                canvas.before:
                    Color:
                        rgba: hex('#273469')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint: 1, 0.05
                markup: True
                text: 'СМОТРИ.  ЧИТАЙ.  СЛУШАЙ.'
                color: 1,1,1,1
                font_size: 20
            Carousel:
                size_hint: 1, 0.25
                canvas.before:
                    Color:
                        rgba: hex('#273469')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                direction: 'right'
                BoxLayout:
                    orientation: 'vertical'
                    padding: 20, 0
                    Button:
                        on_release: app.root.current = app.root.watch_screen
                        background_color: 5, 8, 9, 0
                        StackLayout:
                            canvas.before:
                                Color:
                                    rgba: (1, 1, 1, 1)
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]
                            pos: self.parent.x, self.parent.height / 4
                            size: self.parent.width, self.parent.height * 0.7
                            orientation: 'lr-tb'
                            Label:
                                size_hint_x: 0.1
                                size_hint_y: 1
                            Image:
                                source: 'glaz.png'
                                size_hint_x: 0.3
                                size_hint_y: 1
                            Label:
                                size_hint_x: 0.1
                                size_hint_y: 1
                            Label:
                                size_hint_x: 0.4
                                size_hint_y: 1
                                markup: True
                                text_size: self.size
                                halign: 'left'
                                valign: 'center'
                                text: app.watch
                                color: 0, 0, 0, 1
                BoxLayout:
                    orientation: 'vertical'
                    padding: 20, 0
                    Button:
                        on_release: app.root.current = app.root.read_screen
                        background_color: 5, 8, 9, 0
                        StackLayout:
                            canvas.before:
                                Color:
                                    rgba: (1, 1, 1, 1)
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]
                            pos: self.parent.x, self.parent.height / 4
                            size: self.parent.width, self.parent.height * 0.7
                            orientation: 'lr-tb'
                            Label:
                                size_hint_x: 0.1
                                size_hint_y: 1
                            Image:
                                source: 'read.png'
                                size_hint_x: 0.3
                                size_hint_y: 1
                            Label:
                                size_hint_x: 0.1
                                size_hint_y: 1
                            Label:
                                size_hint_x: 0.4
                                size_hint_y: 1
                                markup: True
                                text_size: self.size
                                halign: 'left'
                                valign: 'center'
                                text: app.read
                                color: 0, 0, 0, 1
                BoxLayout:
                    orientation: 'vertical'
                    padding: 20, 0
                    Button:
                        on_release: app.root.current = app.root.listen_screen
                        background_color: 5, 8, 9, 0
                        StackLayout:
                            canvas.before:
                                Color:
                                    rgba: (1, 1, 1, 1)
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [(20, 20), (20, 20), (20, 20), (20, 20)]
                            pos: self.parent.x, self.parent.height / 4
                            size: self.parent.width, self.parent.height * 0.7
                            orientation: 'lr-tb'
                            Label:
                                size_hint_x: 0.1
                                size_hint_y: 1
                            Image:
                                source: 'ears.png'
                                size_hint_x: 0.3
                                size_hint_y: 1
                            Label:
                                size_hint_x: 0.1
                                size_hint_y: 1
                            Label:
                                size_hint_x: 0.4
                                size_hint_y: 1
                                markup: True
                                text_size: self.size
                                halign: 'left'
                                valign: 'center'
                                text: app.listen
                                color: 0, 0, 0, 1

            GridLayout:
                cols: 4
                size_hint: 1, 0.15

                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        background_color: 255, 255, 255, 1
                        on_release: app.root.current = 'main'
                        Image:
                            source: 'main.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y
                            size: self.parent.width * 0.7, self.parent.width * 0.7

                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        background_color: 255, 255, 255, 1
                        on_release: app.root.current = 'library'
                        Image:
                            source: 'library.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y
                            size: self.parent.width * 0.7, self.parent.width * 0.7

                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        background_color: 255, 255, 255, 1
                        on_release: app.root.current = 'thecamera'
                        Image:
                            source: 'skan.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y
                            size: self.parent.width * 0.7, self.parent.width * 0.7

                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        background_color: 255, 255, 255, 1
                        on_release: app.root.current = 'abapp'
                        Image:
                            source: 'abapp.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y
                            size: self.parent.width * 0.7, self.parent.width * 0.7


    library:

    abapp:

    abbook:

    vidbook:

    audbook:

    illust:

    voda:

    sign:

    thecamera:

