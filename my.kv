#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import hex kivy.utils.get_color_from_hex

<MainScreenManager>:
    transition: NoTransition()

    Screen:
        name: 'main'

        canvas.before:
            Color:
                rgba: hex('E4D9FF')
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            cols: 1

            Label:
                canvas.before:
                    Color:
                        rgba: hex('E4D9FF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint: 1, 0.05
                markup: True
                text: 'Digital [i]Реставрация[/i]'
                color: 0,0,0,1
#                font_size: 20

            BoxLayout:
                size_hint: 1, 0.30
                canvas.before:
                    Color:
                        rgba: hex('E4D9FF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Image:
                    source: 'logo.png'
                    size_hint_y: None
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    height: self.parent.height * 0.85

            BoxLayout:
                size_hint: 1, 0.25
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 1,1,1,1 #hex('#273469')
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [(60, 60), (60, 60), (0, 0), (0, 0)]
                        source: 'stripes_fit.png'
                padding: 20, 0
                Label:
                    size_hint: 1, 0.2
                    text: '[b] [/b]'
                    markup: True
                    text_size: self.size
                    font_size: 15
                    valign: 'bottom'
                    halign: 'center'
                    color: hex('#273469')
                Button:
                    on_release: app.root.current = 'thecamera'
                    background_color: 1, 1, 1, 0
                    StackLayout:
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1)
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [(60, 60), (60, 60), (60, 60), (60, 60)]
                        pos: self.parent.pos
                        size: self.parent.width, self.parent.height * 0.9
                        orientation: 'lr-tb'
                        Label:
                            size_hint_x: 1
                            size_hint_y: 0.2
                        Image:
                            source: 'qrar.png'
                            size_hint_x: 0.4
                            size_hint_y: 0.6
                        Label:
                            text: 'Сканируй QR или AR'
                            color: 0,0,0,1
                            size_hint_x: 0.6
                            size_hint_y: 0.6
                            text_size: self.size
                            valign: 'center'
                            halign: 'left'
                Label:
                    size_hint: 1, 0.15
            BoxLayout:
                size_hint: 1, 0.25
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 1,1,1,1 #hex('#273469')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: 'stripes_fit.png'
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: hex('#273469')
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(60, 60), (60, 60), (0, 0), (0, 0)]
                    Label:
                        size_hint: 1, 0.2
                        text: '[b]СМОТРИ[/b]             [b]ЧИТАЙ[/b]             [b]СЛУШАЙ[/b]'
                        markup: True
                        text_size: self.size
#                        font_size: 15
                        valign: 'bottom'
                        halign: 'center'
                        color: hex('E4D9FF')
