                                    canvas.before:
                                        Color:
                                            rgba: hex('#273469')
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                BoxLayout:
                                    canvas.before:
                                        Color:
                                            rgba: hex('#273469')
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                            Button:
                                on_release: app.root.current = app.root.watch_screen
                                background_color: 1, 1, 1, 0
                                StackLayout:
                                    canvas.before:
                                        Color:
                                            rgba: (1, 1, 1, 1)
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [(60, 60), (60, 60), (60, 60), (60, 60)]
                                    pos: self.parent.x, self.parent.height / 8
                                    size: self.parent.width, self.parent.height * 0.8
                                    orientation: 'lr-tb'
                                    Label:
                                        size_hint_x: 0.1
