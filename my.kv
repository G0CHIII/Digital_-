                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                BoxLayout:
                                    canvas.before:
                                        Color:
                                            rgba: hex('E4D9FF')
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                BoxLayout:
                                    canvas.before:
                                        Color:
                                            rgba: hex('#273469')
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                            Button:
                                on_release: app.root.current = app.root.read_screen
                                background_color: 5, 8, 9, 0
                                StackLayout:
                                    canvas.before:
                                        Color:
                                            rgba: (1, 1, 1, 1)
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [(60, 60), (60, 60), (60, 60), (60, 60)]
                                    pos: self.parent.x, self.parent.height / 8
                                    size: self.parent.width, self.parent.height * 0.8
                                    orientation: 'lr-tb'
                                    Label:
                                        size_hint_x: 0.1
                                        size_hint_y: 1
                                    Image:
                                        source: 'read.png'
                                        size_hint_x: 0.2
                                        size_hint_y: 1
                                    Label:
                                        size_hint_x: 0.1
                                        size_hint_y: 1
                                    Label:
                                        size_hint_x: 0.5
                                        size_hint_y: 1
                                        markup: True
                                        text_size: self.size
                                        halign: 'left'
                                        valign: 'center'
                                        text: app.read
                                        color: 0, 0, 0, 1
                        BoxLayout:
                            orientation: 'vertical'
                            padding: 20, 0
                            BoxLayout:
                                size_hint: 1, 0.01
                                orientation: 'horizontal'
                                BoxLayout:
                                    canvas.before:
                                        Color:
                                            rgba: hex('#273469')
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                BoxLayout:
                                    canvas.before:
                                        Color:
                                            rgba: hex('#273469')
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                                BoxLayout:
                                    canvas.before:
                                        Color:
                                            rgba: hex('E4D9FF')
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size
                            Button:
                                on_release: app.root.current = app.root.listen_screen
                                background_color: 5, 8, 9, 0
                                StackLayout:
                                    canvas.before:
                                        Color:
                                            rgba: (1, 1, 1, 1)
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [(60, 60), (60, 60), (60, 60), (60, 60)]
                                    pos: self.parent.x, self.parent.height / 8
                                    size: self.parent.width, self.parent.height * 0.8
                                    orientation: 'lr-tb'
                                    Label:
                                        size_hint_x: 0.1
                                        size_hint_y: 1
                                    Image:
                                        source: 'ears.png'
                                        size_hint_x: 0.2
                                        size_hint_y: 1
                                    Label:
                                        size_hint_x: 0.1
                                        size_hint_y: 1
                                    Label:
                                        size_hint_x: 0.5
                                        size_hint_y: 1
                                        markup: True
                                        text_size: self.size
                                        halign: 'left'
                                        valign: 'center'
                                        text: app.listen
                                        color: 0, 0, 0, 1

