#:import hex kivy.utils.get_color_from_hex

<library@Screen>:

    name: 'library'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        RelativeLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.08
            pos_hint: {'top': 1}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            AnchorLayout:
                size_hint: 1, 1
                Search:



        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            canvas.before:
                Color:
                    rgba: hex('#273469')
                Rectangle:
                    pos: self.pos
                    size: self.size


            GridLayout:
                size_hint_y: None
                cols: 1
                row_default_height: '125dp'
                spacing: 20, 20
                padding: 10, 10
                height: self.minimum_height


                Button:
                    on_release: app.root.current = 'illust'
                    background_color: 255, 255, 255, 0
                    StackLayout:
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1)
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [(20, 20), (20, 20), (20, 20), (20, 20)]
                        pos: self.parent.pos
                        size: self.parent.size
                        orientation: 'lr-tb'
                        Image:
                            source: 'glaz.png'
                            size_hint_x: 0.3
                            size_hint_y: 0.7

                        Label:
                            size_hint_x: 0.7
                            size_hint_y: 0.7
                            markup: True
                            text: '[b]Медный Всадник[/b]\nА.С. Пушкин'
                            color: 0, 0, 0, 1

                        Label:
                            size_hint_x: 0.3
                            size_hint_y: 0.3
                            text: 'Иллюстрации'
                            color: 0, 0, 0, 1


