#:import hex kivy.utils.get_color_from_hex

<library@Screen>:

    name: 'library'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        RelativeLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.08
            pos_hint: {'top': 1}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            AnchorLayout:
                size_hint: 1, 1
                Search:

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            canvas.before:
                Color:
                    rgba: hex('#273469')
                Rectangle:
                    pos: self.pos
                    size: self.size

            GridLayout:
                height: '3500dp'
                size_hint_y: None
                cols: 1
                Lib:
                    id: lib

        Menu: