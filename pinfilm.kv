

<pinfilm@Screen>:
    rows: 2
    name: 'pinfilm'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 2
        cols: 1

        Image:
            id: pinfilm
            source: 'pinfilm.png'
            size_hint: 1, 0.6
            allow_stretch: True

        GridLayout:
            rows: 2
            cols: 1
            Label:
                markup: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                padding: 10, 10
                text: 'Польская короткометражка по мотивам "Преступления и наказания".\nРежиссер: Петр Думала\n\n[ref=some][b]КЛИКНИ СЮДА[/b][/ref]'
                color: 0, 0, 0, 1
                on_ref_press:
                    import webbrowser
                    webbrowser.open('https://ok.ru/video/1333906705013')

    Menu: