

<pinworld@Screen>:
    rows: 2
    name: 'pinworld'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 2
        cols: 1

        Image:
            id: pinworld
            source: 'pinworld.png'
            size_hint: 1, 0.6
            allow_stretch: True

        RelativeLayout:
            pos_hint: {'x': 1, 'y': 1}
            Label:
                markup: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                padding: 10, 10
                text: 'Необъятный и крайне стильный сайт о творчестве Ф.М. Достоевского\n\n[ref=some][b]КЛИКНИ СЮДА[/b][/ref]'
                color: 0, 0, 0, 1
                on_ref_press:
                    import webbrowser
                    webbrowser.open('https://dostoevskyworld.ru/')

    Menu: