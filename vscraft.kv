
<vscraft@Screen>:
    rows: 2
    name: 'vscraft'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            size_hint_y: None
            cols: 1
            row_default_height: root.height / 1.6
            spacing: 20, 20
            height: self.minimum_height

            GridLayout:
                rows: 2
                cols: 1
                spacing: 10
                Image:
                    source: 'vscraft.png'
                    size_hint_y: None
                    allow_stretch: True
                    height: root.height / 3
                Label:
                    markup: True
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    padding: 10, 10
                    text: 'БДТ ИМЕНИ Г.А. ТОВСТОНОГОВА\n"ВИШНЕВЫЙ САД"\nMinecraft-спектакль БДТ\n\n[ref=some][b]КЛИКНИ СЮДА[/ref][b]'
                    color: 0, 0, 0, 1
                    on_ref_press:
                        import webbrowser
                        webbrowser.open('https://www.youtube.com/watch?v=L9FfoPSzNRY')

            GridLayout:
                rows: 2
                cols: 1
                spacing: 10
                Image:
                    id: vsimage3
                    source: 'vsimage3.png'
                    size_hint_y: None
                    allow_stretch: True
                    height: root.height / 3
                Label:
                    markup: True
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    padding: 10, 10
                    text: 'Статья про спектакль-перформанс "Before I Sleep".\nРежиссер Тристан Шарпс.\n\n[ref=some][b]КЛИКНИ СЮДА[b][/ref]'
                    color: 0, 0, 0, 1
                    on_ref_press:
                        import webbrowser
                        webbrowser.open('https://www.theguardian.com/stage/2010/may/04/dreamthinkspeak-tristan-sharps')

    Menu: