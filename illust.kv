

<illust@Screen>:
    name: 'illust'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                size_hint_y: None
                cols: 1
                row_default_height: root.height / 2
                spacing: 20, 20
                padding: 10, 10
                height: self.minimum_height




                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: benua1
                        source: 'benua1.png'
                        size_hint_y: None
                        height: root.height / 3

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            text_size: self.size
                            halign: 'center'
                            valign: 'center'
                            markup: True
                            text: "[b]Иллюстрации А.Н. Бенуа к поэме А.С. Пушкина\n«Медный всадник»[/b]"
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: benua2
                        source: 'benua2.png'
                        size_hint_y: None
                        height: root.height / 3


                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            text_size: self.size
                            halign: 'center'
                            valign: 'center'
                            text: 'И во всю ночь безумец бедный\nКуда стопы ни обращал,\nЗа ним повсюду Всадник Медный\nС тяжелым топотом скакал.'
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: benua3
                        source: 'benua3.png'
                        size_hint_y: None
                        height: root.height / 3


                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            text_size: self.size
                            halign: 'center'
                            valign: 'center'
                            text: 'И всплыл Петрополь как Тритон,\nПо пояс в воду погружен.\nОсада! Приступ! Злые волны,\nКак воры, лезут в окна. Челны\nС разбега стекла бьют кормой.'
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: benua4
                        source: 'benua4.png'
                        size_hint_y: None
                        height: root.height / 3


                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            text_size: self.size
                            halign: 'center'
                            valign: 'center'
                            text: 'Глядит... идет... еще глядит.\nВот место, где их дом стоит;\nВот ива. Были здесь вороты —\nСнесло их, видно. Где же дом?'
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: benua5
                        source: 'benua5.png'
                        size_hint_y: None
                        height: root.height / 3


                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            text_size: self.size
                            halign: 'center'
                            valign: 'center'
                            text: '.. Злые дети бросали камни вслед ему'
                            color: 0, 0, 0, 1
        Menu: