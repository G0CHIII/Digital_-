

<vidbook@Screen>:
    rows: 2
    name: 'vidbook'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            rows: 2
            cols: 1
            minimum_height: self.height

            Image:
                id: cuprum
                source: 'medlion.png'
                size_hint: 1, 0.6
                allow_stretch: True

            RelativeLayout:
                pos_hint: {'x': 1, 'y': 1}
                Label:
                    markup: True
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    padding: 10, 10
                    text: 'МАРИИНСКИЙ ТЕАТР\nМЕДНЫЙ ВСАДНИК\n\nБалет Ростислава Захарова, Юрия Смекалова на музыку Рейнгольда Глиэра\n\n[ref=some]КЛИКНИ СЮДА[/ref]'
                    color: 0, 0, 0, 1
                    on_ref_press:
                        import webbrowser
                        webbrowser.open('https://www.mariinsky.ru/playbill/repertoire/ballet/bronze_horseman/')
    Menu: