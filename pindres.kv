

<pindres@Screen>:
    name: 'pindres'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                size_hint_y: None
                cols: 1
                row_default_height: root.height / 1.3
                spacing: 10, 10
                height: self.minimum_height

                GridLayout:
                    rows: 3
                    cols: 1
                    spacing: 0
                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            markup: True
                            text_size: self.size
                            halign: 'center'
                            valign: 'top'
                            padding: 10, 10
                            text: "[b]Несколько адресов Санкт-Петербурга,\nсвязанных с Ф.М. Достоевским[/b]"
                            color: 0, 0, 0, 1
                    Image:
                        id: pindres1
                        source: 'pindres1.png'
                        size_hint_y: None
                        allow_stretch: True
                        height: root.height / 2.5

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            markup: True
                            text_size: self.size
                            halign: 'left'
                            valign: 'top'
                            padding: 10, 10
                            text: "[b]Дом Раскольникова[/b]\nГражданская улица, 19 / Столярный переулок, 5\nЗдесь, в комнате, похожей на гроб, под самой крышей, обитал главный герой романа. До дома старухи – ровно 730 шагов."
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: pindres2
                        source: 'pindres2.png'
                        size_hint_y: None
                        allow_stretch: True
                        height: root.height / 2

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            markup: True
                            text_size: self.size
                            halign: 'left'
                            valign: 'top'
                            padding: 10, 10
                            text: "[b]Дом Сони Мармеладовой[/b]\nНабережная канала Грибоедова, 73\nНа третьем этаже этого дома (тогда – последнем) Соня Мармеладова снимала низкую комнату, «походившую на сарай», у портного Капернаумова. На этом же этаже поселился позже и Свидригайлов."
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: pindres3
                        source: 'pindres3.png'
                        size_hint_y: None
                        allow_stretch: True
                        height: root.height / 2

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            markup: True
                            text_size: self.size
                            halign: 'left'
                            valign: 'top'
                            padding: 10, 10
                            text: "[b]Дом старухи-процентщицы[/b]\nНабережная канала Грибоедова, 104\nЗдесь на четвертом этаже знаменитого «дома-утюга» писатель поселил жертв Раскольникова: Алену Ивановну и ее сестру Лизавету."
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: pindres4
                        source: 'pindres4.png'
                        size_hint_y: None
                        allow_stretch: True
                        height: root.height / 2

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            markup: True
                            text_size: self.size
                            halign: 'left'
                            valign: 'top'
                            padding: 10, 10
                            text: "[b]Гауптвахта[/b]\nСенная площадь, 37\nСенная площадь – частое место действия в романах Достоевского. Здесь Раскольников окончательно решился на убийство старухи."
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: pindres5
                        source: 'pindres5.png'
                        size_hint_y: None
                        allow_stretch: True
                        height: root.height / 2

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            markup: True
                            text_size: self.size
                            halign: 'left'
                            valign: 'top'
                            padding: 10, 10
                            text: "[b]Дом А.А. Астафьевой[/b]\nКазначейская улица, 1\nС 1861 по 1863 гг. в доходном доме Астафьевой в «квартире под №4» жил сам писатель. В этот период он закончил «Записки из мертвого дома». Здесь же располагалась редакция журнала «Время», который издавали братья Федор и Михаил Достоевские."
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: pindres6
                        source: 'pindres6.png'
                        size_hint_y: None
                        allow_stretch: True
                        height: root.height / 2

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            markup: True
                            text_size: self.size
                            halign: 'left'
                            valign: 'top'
                            padding: 10, 10
                            text: "[b]Дом Евреинова[/b]\nКазначейская улица, 9\nЗдесь на Малой Мещанской (ныне Казначейской) улице Ф.М. Достоевский жил в апреле 1864 года после смерти первой жены Марии Исаевой."
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: pindres7
                        source: 'pindres7.png'
                        size_hint_y: None
                        allow_stretch: True
                        height: root.height / 2

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            markup: True
                            text_size: self.size
                            halign: 'left'
                            valign: 'top'
                            padding: 10, 10
                            text: "[b]Дом Ширмера[/b]\nВознесенский проспект, 29\nВ этом доме Федор Михайлович жил с февраля по апрель 1867 года. Снять здесь пятикомнатную квартиру Достоевский и Анна Григорьевна Сниткина решили перед своей свадьбой."
                            color: 0, 0, 0, 1

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    Image:
                        id: pindres8
                        source: 'pindres8.png'
                        size_hint_y: None
                        allow_stretch: True
                        height: root.height / 2

                    RelativeLayout:
                        pos_hint: {'x': 1, 'y': 1}
                        Label:
                            markup: True
                            text_size: self.size
                            halign: 'left'
                            valign: 'top'
                            padding: 10, 10
                            text: "[b]Дом Рогожина[/b]\nГороховая, 28\nЗдесь жил герой романа «Идиот» Парфен Семенович Рогожин."
                            color: 0, 0, 0, 1
        Menu: