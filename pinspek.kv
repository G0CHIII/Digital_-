

<pinspek@Screen>:
    rows: 2
    name: 'pinspek'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 2
        cols: 1

        Image:
            id: pinspek
            source: 'pinspek.png'
            size_hint: 1, 0.6
            allow_stretch: True

        GridLayout:
            rows: 2
            cols: 1
            Label:
                markup: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                padding: 10, 10
                text: 'Спектакль по мотивам "Преступления и наказания" в Александрийском театре\nРежиссер: Атилла Виднянский\n\n[ref=some][b]КЛИКНИ СЮДА[/b][/ref]'
                color: 0, 0, 0, 1
                on_ref_press:
                    import webbrowser
                    webbrowser.open('https://alexandrinsky.ru/afisha-i-bilety/prestuplenie-i-nakazanie/')

    Menu: